{% extends 'base.html.twig' %}

{% block title %}Items{% endblock %}

{% block body %}

    <div class="box">
        <div class="titre">
            <h1 class="box-title">Liste des items</h1>
        </div>

        {{ include('item/_form_search.html.twig') }}

        <div class="box-body">
            <table class="table table-striped dataTable" role="grid">
                <thead>
                    <tr role="row">
                        <th>Référence</th>
                        <th>Désignation</th>
                        <th>Emplacement</th>
                        <th>Quantite</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for item in items %}
                    <tr role="row">
                        <td>{{ item.reference }}</td>
                        <td>{{ item.designation }}</td>
                        <td>{{ item.emplacement }}</td>
                        <td>{{ item.quantite }}</td>
                        <td class="actions_form row">
                            <a href="{{ path('app_item_edit', { 'id': item.id}) }}" class="btn btn-primary">
                                <i class="fa fa-pencil-alt"></i>
                            </a>
                            {% if isAdmin %}
                                {{ include('item/_delete.html.twig') }}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

