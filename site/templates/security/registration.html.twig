{% extends 'base.html.twig' %}

{% block body %}

    <h1>Inscription sur le site</h1>

    {{ form_start(form) }}

    {{ form_row(form.username,  {'label': 'Nom de l\'utilisateur', 'attr': {'placeholder': 'Nom de l\'utilisateur...'}}) }}
    {{ form_row(form.email, {'label': 'Adresse mail', 'attr': {'placeholder': 'Adresse mail...'}}) }}
    {{ form_row(form.login, {'label': 'Identifiant', 'attr': {'placeholder': 'Identifiant...'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe...'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation de mot de passe', 'attr': {'placeholder': 'Répétez votre mot de passe'}}) }}

    <button type="submit" class="btn btn-success">
        Inscription !
    </button>
    
    {{ form_end(form) }}

{% endblock %}