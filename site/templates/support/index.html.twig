{% extends 'base.html.twig' %}

{% block title %}Supports{% endblock %}

{% block body %}
    <div class="box">
        <div class="box-header div-titre-btn">
            <div class="titre">
                <h1 class="box-title">Liste des supports</h1>
            </div>
            <div class="bouton">
                <a href="{{ path('app_support_new') }}" class="btn btn-primary top-btn">Cr√©er un support</a>
            </div>
        </div>
        
        {{ include('support/_form_search.html.twig') }}

        <div class="box-body">
            <table class="table table-striped dataTable" role="grid">
                <thead>
                    <tr role="row">
                        <th>Article</th>
                        <th>Nom</th>
                        <th>Quantite</th>
                        <th>Couleur</th>
                        <th>Format</th>
                        <th>Grammage</th>
                        <th>Materiel</th>
                        <th>Type<th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for support in supports %}
                    <tr role="row">
                        <td>{{ support.id }}</td>
                        <td>{{ support.nom }}</td>
                        <td>{{ support.quantite }}</td>
                        <td>{{ support.couleur }}</td>
                        <td>{{ support.format }}</td>
                        <td>{{ support.grammage }}</td>
                        <td>{{ support.materiel }}</td>
                        <td>{{ support.type }}</td>
                        <td class="actions_form row">
                            <a href="{{ path('app_support_edit', { 'id': support.id}) }}" class="btn btn-primary">
                                <i class="fa fa-pencil-alt"></i>
                            </a>
                            {% if isAdmin %}
                                {{ include('support/_delete.html.twig') }}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
