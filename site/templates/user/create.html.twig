{% extends 'base.html.twig' %}

{% block body %}

    <h1>Ajouter une utilisateur</h1>

    {{ form_start(form) }}

    {{ form_row(form.email, {'label': 'Adresse mail', 'attr': {'placeholder': 'Adresse mail...'}}) }}
    {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Mot de passe...'}}) }}
    {{ form_row(form.confirm_password, {'label': 'Confirmation de mot de passe', 'attr': {'placeholder': 'Répétez votre mot de passe'}}) }}

    <button type="submit" class="btn btn-success">
        Créer l'utilisateur
    </button>
    
    {{ form_end(form) }}

{% endblock %}