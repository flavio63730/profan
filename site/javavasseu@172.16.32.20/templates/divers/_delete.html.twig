<form method="post" action="{{ path('app_divers_delete', {'id': divers.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ divers.id) }}">
    <button class="btn btn-danger">
        <i class="fa fa-trash"></i>
    </button>
</form>
