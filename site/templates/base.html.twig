<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Gestion des Stocks{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/flatly_bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/all.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
        {% endblock %}

    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="{{ path('home') }}">Profan</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_item_index') }}">Item</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_support_index') }}">Support</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_liquide_index') }}">Encre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_divers_index') }}">Divers</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_user_index') }}">Gestion utilisateur</a>
                    </li>
                    {% endif %}
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('security_logout') }}">DÃ©connexion</a>
                        </li>
                    {% endif %}
                </ul>
            </div>

            <ul class="nav nav-pills">
                <li class="nav-item dropdown">
                    <a class="btn btn-primary top-btn nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Ajouter Item</a>
                    <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 38px, 0px);">
                        <a class="dropdown-item" href="{{ path('app_support_new') }}">Support</a>
                        <a class="dropdown-item" href="{{ path('app_liquide_new') }}">Encre</a>
                        <a class="dropdown-item" href="{{ path('app_divers_new') }}">Autres</a>
                        <a class="dropdown-item" href="{{ path('app_item_new') }}">Item</a>
                    </div>
                </li>
            </ul>
        </nav>

        <div class="container">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            <script src="{{ asset('assets/js/jquery3.3.1.js') }}"></script>
            <script src="{{ asset('assets/js/bootstrap4.1.3.js') }}"></script>
        {% endblock %}
    </body>
</html>
